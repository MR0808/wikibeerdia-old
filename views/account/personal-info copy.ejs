<%- include('../includes/header.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>

    <!--=============================
        PAGE HEADING START
    ==============================-->
    <section>
        <div class="account_overly">
            <div class="container">
                <div class="row">
                    <div class="col-10 d-flex flex-wrap justify-content-between">
                        <div class="account_heading_text account_breadcrumbs">
                            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a class="bc_black" href="/account">Account</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Personal Info</li>
                                </ol>
                            </nav>
                            <h1>Personal Info</h1>
                            <input type="hidden" name="user" id="user" value="<%= user._id %>">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--=============================
        PAGE HEADING END
    ==============================-->

    <!--=============================
        CONTENT START
    ==============================-->
    <section class="account_container mt-3">
        <div class="container">
            <div class="row">
                <div class="col-xl-7 me-5">
                    <div class="row">
                        <div class="account_content">
                            <form action="/account/personal-info" enctype="multipart/form-data" method="POST" novalidate>
                                <div class="account_options wow fadeInUp" data-wow-duration="1.5s">
                                    <div class="account_option_item">
                                        <div class="account_option_item_text">
                                            <h3>Profile Pic</h3>
                                            <div class="account_form">
                                                <input type="file" name="profilePicture" id="profilePicture">
                                                <% if (validationErrors.find( e => e.path === 'profilePicture')) { %>
                                                    <p class="form_error_text"><i class="fas fa-exclamation-triangle"></i> Please upload a valid logo (JPG or PNG)</p>
                                                <% } %>
                                                <div class="row image-list <% 
                                                if (!user.profilePicture) { %>hidden<% } %>">
                                                    <div class="col-xxl-4 col-md-6">
                                                        <div class="image-item">
                                                            <img name="profilePreview" id="profilePreview" src="<%=user.profilePicture %>">
                                                            <ul class="">
                                                                <li class="profile-delete">
                                                                    <i class="far fa-trash-alt"></i>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="account_option_item">
                                        <div class="account_option_item_text">
                                            <h3 class="required">Name</h3>
                                            <div class="row account_form">
                                                <div class="col">
                                                    <input type="text" name="firstName" id="firstName" placeholder="First Name" class="<%= validationErrors.find( e => e.path === 'firstName') ? 'invalid' : '' %>" value="<%= user.firstName %>">
                                                    <% if (validationErrors.find( e => e.path === 'firstName')) { %>
                                                        <p class="error_text"><i class="fas fa-exclamation-triangle"></i> Please enter a first name</p>
                                                    <% } %>
                                                </div>
                                                <div class="col">
                                                    <input type="text" name="lastName" id="lastName" placeholder="Last Name" class="<%= validationErrors.find( e => e.path === 'lastName') ? 'invalid' : '' %>" value="<%= user.lastName %>">
                                                    <% if (validationErrors.find( e => e.path === 'lastName')) { %>
                                                        <p class="error_text"><i class="fas fa-exclamation-triangle"></i> Please enter a last name</p>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="account_option_item">
                                        <div class="account_option_item_text">
                                            <h3>Gender</h3>
                                            <div class="account_form">
                                                <select class="select_2" name="gender" id="gender">
                                                    <option></option>
                                                        <option value="Male" <% if ((user.gender) && user.gender === 'Male') { %>
                                                            selected
                                                        <% } %>>Male</option>
                                                        <option value="Female" <% if ((user.gender) && user.gender === 'Female') { %>
                                                            selected
                                                        <% } %>>Female</option>
                                                        <option value="Other" <% if ((user.gender) && user.gender === 'Other') { %>
                                                            selected
                                                        <% } %>>Other</option>
                                                        <option value="NotSay" <% if ((user.gender) && user.gender === 'NotSay') { %>
                                                            selected
                                                        <% } %>>Rather not say</option>
                                                </select>
                                                <% if (validationErrors.find( e => e.path === 'gender')) { %>
                                                    <p class="form_error_text"><i class="fas fa-exclamation-triangle"></i> Please select a gender</p>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="account_option_item">
                                        <div class="account_option_item_text">
                                            <h3>Location</h3>
                                            <div class="row account_form">
                                                <div class="col">
                                                    <select class="select_2" name="country" id="country">
                                                        <option></option>
                                                        <% for (let country of countries) { %>
                                                            <option value="<%= country._id %>" <% if (country._id.toString() === user.country.toString()) { %>
                                                                selected 
                                                                <% } %>><%= country.name %></option>
                                                        <% } %>
                                                    </select>
                                                    <% if (validationErrors.find( e => e.path === 'country')) { %>
                                                        <p class="error_text"><i class="fas fa-exclamation-triangle"></i> Please select a country</p>
                                                    <% } %>
                                                </div>
                                                <div class="col">
                                                    <select class="select_2" name="state" id="state">
                                                        <option></option>
                                                        <% for (let state of states) { %>
                                                            <option value="<%= state._id %>" <% if ((state) && state._id.toString() === user.state) { %>
                                                                selected
                                                            <% } %>><%= state.name %> </option>
                                                        <% } %>
                                                    </select>
                                                    <% if (validationErrors.find( e => e.path === 'state')) { %>
                                                        <p class="error_text"><i class="fas fa-exclamation-triangle"></i> Please select a state</p>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="account_option_item">
                                        <div class="account_option_item_text">
                                            <h3>Date of Birth (must be over 18)</h3>
                                            <div class="account_form">
                                                <input type="text" id="dateOfBirth" name="dateOfBirth" value="<%= user.dateOfBirth %>">
                                                <% if (validationErrors.find( e => e.path === 'dateOfBirth')) { %>
                                                    <p class="form_error_text"><i class="fas fa-exclamation-triangle"></i> Please select a valid date of birth</p>
                                                <% } %>
                                            </div>
                                            <button class="common_btn" type="submit">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-7">
                    <div class="property_sidebar sticky_sidebar wow fadeInUp" data-wow-duration="1.5s">
                        <div class="sidebar_search sidebar_wizerd">
                            <h3>search</h3>
                            <form action="#">
                                <input type="text" placeholder="Search">
                                <button type="submit"><i class="far fa-search"></i></button>
                            </form>
                        </div>
                        <div class="sidebar_dropdown sidebar_wizerd">
                            <h3>Type</h3>
                            <select class="select_2" name="state">
                                <option value="">Select Type</option>
                                <option value="">Sell</option>
                                <option value="">Rent</option>
                                <option value="">Buy</option>
                            </select>
                        </div>                       
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--=============================
        CONTENT END
    ==============================-->

    <%- include('../includes/footer.ejs') %>
    <script src="/assets/js/flatpickr.js"></script>
    

    <script>
        const profileInput = $('#profilePicture');

        profileInput.change(function (e) {
            file = this.files[0];
            if (file) {
                let validExtensions = ['image/jpeg', 'image/jpg', 'image/png'];
                let fileType = file.type;
                if (validExtensions.includes(fileType)) {
                    let reader = new FileReader();
                    reader.onload = function (event) {
                        $('#profilePreview').attr('src', event.target.result);
                    };
                    reader.readAsDataURL(file);
                    $('.hidden').show();
                }
            }
        });

        $(document).on('click', '.profile-delete', function () {
            $('.hidden').hide();
            profileInput.val('');
        });

        $('#gender').select2({
            placeholder: "Select a gender",
            minimumResultsForSearch: 10,
            allowClear: true
        });

        $('#country').select2({
            placeholder: "Select a country",
            minimumResultsForSearch: 10,
            allowClear: true
        });

        console.log($('#country').val())

        $('#state').select2({
            placeholder: "Select a state",
            minimumResultsForSearch: 10,
            allowClear: true
        });

        let maxDate = new Date(); 
        maxDate.setFullYear(maxDate.getFullYear() - 18);

        $("#dateOfBirth").flatpickr({
            altInput: true,
            altFormat: 'J F, Y',
            dateFormat: 'Y-m-d',
            maxDate: maxDate
        });

        $("#country").on( "change", function(event) {
            if(this.value) {
                getStates(this.value);
            } else {
                clearStates();
            }
        });

        function clearStates(countryId) {
            let html = '<option></option>';
            document.getElementById('state').innerHTML = html;
            $('#state').val(null).trigger('change');
        }

        async function getStates(countryId) {
            let jsonStates;
            try {
                const returnedStates = await fetch(
                    '/config/getStates?country=' + countryId
                );
                jsonStates = await returnedStates.json();
                states = jsonStates.data;
            } catch (e) {
                alert(e);
                throw new Error(e);
            }

            let html = '<option></option>';
            for (let state of states) {
                html += '<option value="' + state._id + '">' + state.name + '</option>';
            }

            document.getElementById('state').innerHTML = html;
        }

    </script>

</body>

</html>