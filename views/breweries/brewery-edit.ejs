<%- include('../includes/header.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>
    
    <!--=============================
        BREADCRUMBS START
    ==============================-->
    <section class="breadcrumbs" style="background: url(/assets/images/addbrewery-bg.jpg);">
        <div class="breadcrumbs_overly">
            <div class="container">
                <div class="row">
                    <div class="col-12 justify-content-center">
                        <div class="breadcrumb_text wow fadeInUp" data-wow-duration="1.5s">
                            <h1>Add Brewery</h1>
                            <ul class="d-flex flex-wrap justify-content-center">
                                <li><a href="/"><i class="fas fa-home"></i>Home</a></li>
                                <li><a href="/breweries">Breweries</a></li>
                                <% if (editing) { %>
                                    <li><a href="/breweries/edit-brewery/<%= brewery._id %>">Edit Brewery</a></li>
								<% } else { %>
									<li><a href="/breweries/add-brewery">Add Brewery</a></li>
								<% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--=============================
        BREADCRUMBS END
    ==============================-->


    <!--=============================
        ADD/EDIT BREWERY START
    ==============================-->
    <section class="login_area pt_120 xs_pt_100 pb_120 xs_pb_100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-xl-6">
                    <div class="main_login_area">
                        <div class="add_property_info wow fadeInLeft" data-wow-duration="1.5s">
                            <h3><% if (editing) { %>Edit<% } else { %>Add<% } %> Brewery</h3>
                            <form action="/breweries/<% if (editing) { %>edit-brewery<% } else { %>add-brewery<% } %>" method="POST" novalidate>
                                <div class="row">
                                    <div class="col-xxl-12 col-md-12">
                                        <div class="add_property_input">
                                            <label>Name</label>
                                            <input type="text" name="name" id="name" placeholder="Name" class="<%= validationErrors.find( e => e.path === 'name') ? 'invalid' : '' %>" value="<%= oldInput.name %>">
                                            <% if (validationErrors.find( e => e.path === 'name')) { %>
                                                <p class="error_text"><i class="fas fa-exclamation-triangle"></i> Please enter a brewery name</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xxl-12 col-md-12">
                                        <div class="add_property_input">
                                            <label>Location</label>
                                            <input type="text" id="cityName" name="cityName" placeholder="Enter city" class="<%= validationErrors.find( e => e.path === 'city') ? 'invalid' : '' %>" value="<%= oldInput.cityName %>">
                                            <input type="hidden" id="city" name="city" value="<%= oldInput.city %>">
                                            <% if (validationErrors.find( e => e.path === 'city')) { %>
                                                <p class="error_text"><i class="fas fa-exclamation-triangle"></i> Please select a brewery location</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xxl-12 col-md-12">
                                        <div class="add_property_input">
                                            <label>Brewery Description</label>
                                            <textarea name="description" id="description" class="<%= validationErrors.find( e => e.path === 'description') ? 'invalid' : '' %>" value="<%= oldInput.name %>" height="100px"><%= oldInput.description %></textarea>
                                            <% if (validationErrors.find( e => e.path === 'description')) { %>
                                                <p class="error_text"><i class="fas fa-exclamation-triangle"></i> Please enter a brewery description</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xxl-12 col-md-12">
                                        <div class="add_property_input">
                                            <label>Logo</label>
                                            <input type="file" name="logo" id="logo">
                                            <% if (validationErrors.find( e => e.path === 'logo')) { %>
                                                <p class="error_text"><i class="fas fa-exclamation-triangle"></i> Please upload a logo</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xxl-12 col-md-12">
                                        <div class="add_property_input">
                                            <label>Website</label>
                                            <input type="text" name="website" id="name" placeholder="Website" class="<%= validationErrors.find( e => e.path === 'website') ? 'invalid' : '' %>" value="<%= oldInput.website %>">
                                            <% if (validationErrors.find( e => e.path === 'website')) { %>
                                                <p class="error_text"><i class="fas fa-exclamation-triangle"></i> Please enter a brewery website</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xxl-12 col-md-12">
                                        <div class="add_property_input">
                                            <label>Brewery Type</label>
                                            <select class="select_2" name="type" id="type">
                                                <option></option>
                                                <% for (let type of types) { %>
                                                    <option value="<%= type._id %>" <% if ((editing || hasError) && type._id.toString() === brewery.type) { %>
                                                        selected
                                                    <% } %>><%= type.name %> </option>
                                                <% } %>
                                            </select>
                                            <% if (validationErrors.find( e => e.path === 'type')) { %>
                                                <p class="error_text"><i class="fas fa-exclamation-triangle"></i> Please select a brewery type</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xxl-12 col-md-12">
                                        <div class="add_property_input">
                                            <label>Images</label>
                                            <div class="dropzone" id="myDropzone"></div>
                                        </div>
                                    </div>
                                </div>
                                <!-- <input type="hidden" name="csrfToken" value="<%= csrfToken %>"> -->
                                <button class="common_btn" type="submit">
                                    <% if (editing) { %>
                                        Update
                                    <% } else { %>
                                        Add
                                    <% } %> Brewery
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--=============================
        ADD/EDIT BREWERY END
    ==============================-->

    <%- include('../includes/footer.ejs') %>
    <script src="/assets/js/jquery.autocomplete.min.js"></script>
    
    <script>
        $('#cityName').autocomplete({
            serviceUrl: 'http://localhost:3000/location/cities',
            minChars: 3,
            onSelect: function (suggestion) {
                $("#city").val(suggestion.data);
            }
        });

        $('#type').select2({
            placeholder: "Select a brewery type",
            minimumResultsForSearch: 10
        });

        Dropzone.options.myDropzone = {
            url: 'blackHole.php',
            addRemoveLinks: true,
            accept: function(file) {
                let fileReader = new FileReader();

                fileReader.readAsDataURL(file);
                fileReader.onloadend = function() {

                    let content = fileReader.result;
                    $('#file').val(content);
                    file.previewElement.classList.add("dz-success");
                }
                file.previewElement.classList.add("dz-complete");
            }
        }
    </script>

</body>

</html>